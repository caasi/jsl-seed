.hello
  background #fff
  margin-bottom 10px
  border-radius 5px
  padding 10px
  height 320px
  .image
    float left
    width  300px
    height 300px
    margin-right 20px
  .title
    font-size 2rem
    font-weight bolder
    margin-bottom 10px
  &.sm
  &.xs
    display inline-block
    width  320px
    height auto
    margin-right 10px
    &:last-child
      margin-right 10px
    .image
      float none
      margin-right 0
      margin-bottom 10px
    .title
      border-bottom 0
  &.xs
    width 120px
    .image
      display none
    .title
      border-bottom 1px solid #999
      font-size 1rem
      font-weight 900
